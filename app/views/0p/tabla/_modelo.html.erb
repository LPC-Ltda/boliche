<tr>
	<!-- Recorre los campos a desplegar en la table -->
	<!-- f : [campo, tipo_delpliegue] -->
	<% m_tabla_fields(objeto).each do |f| %>
		<% case f[1] %>
		<% when 'show' %>
			<!-- el link se hace salvo que sea una tabla de seleccion -->
			<!-- la función d_field revisa si es un rut para desplegar con formato rut -->
			<td><%= render partial: '0p/tabla/show_field', locals: {a: a, campo: d_field(objeto, f[0]), objeto: objeto} %></td>
		<% when 'fshow' %>
			<td><%= render partial: '0p/tabla/show_field', locals: {a: a, campo: d_field(f_tabla(objeto), f[0]), objeto: f_tabla(objeto)} %></td>
		<!-- campo con formato especial para desplegar, se asume único por tabla -->
		<% when 'display' %>
			<td> <%= objeto.nombre_display %> </td>
		<% when 'fdisplay' %>
			<td> <%= f_tabla(objeto).nombre_display %> </td>
		<!-- Despliegue normal -->
		<% when 'normal' %>
			<td> <%= d_field(objeto, f[0]) %> </td>
		<% else %>
			<td> <%= d_field(f_tabla(objeto), f[0]) %> </td>
		<% end %>

	<% end %>

	<td><%= render partial: '0p/tabla/btns', locals: {a: a, objeto: objeto} %></td>
</tr>
